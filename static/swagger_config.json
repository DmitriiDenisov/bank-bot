            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": [
          "Testing methods"
        ],
        "description": "Get info about me",
        "parameters": [
          {
            "in": "header",
            "name": "key",
            "required": true,
            "description": "token for this method",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Auth error",
            "schema": {
              "type": "string",
              "example": {
                "message": "a valid token is missing"
              }
            }
          }
        }
      }
    },
    "/custs": {
      "get": {
        "tags": [
          "Testing methods"
        ],
        "description": "Get info about all customers",
        "parameters": [
          {
            "in": "header",
            "name": "key",
            "required": true,
            "description": "token for this method",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Auth error",
            "schema": {
              "type": "string",
              "example": {
                "message": "a valid token is missing"
              }
            }
          }
        }
      }
    },
    "/get_trans": {
      "get": {
        "tags": [
          "Testing methods"
        ],
        "description": "Get my all transactions",
        "parameters": [
          {
            "in": "header",
            "name": "key",
            "required": true,
            "description": "token for this method",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Auth error",
            "schema": {
              "type": "string",
              "example": {
                "message": "a valid token is missing"
              }
            }
          }
        }
      }
    },
    "/delete_user": {
      "delete": {
        "tags": [
          "Testing methods"
        ],
        "description": "Get my all transactions",
        "parameters": [
          {
            "in": "query",
            "name": "customer_id",
            "description": "customer to be deleted",
            "type": "integer",
            "default": 35
          },
          {
            "in": "header",
            "name": "key",
            "required": true,
            "description": "token for this method",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Auth error",
            "schema": {
              "type": "string",
              "example": {
                "message": "a valid token is missing"
              }
            }
          }
        }
      }
    },
    "/main": {
      "get": {
        "summary": "Renders the main page with signin/signup/auth",
        "tags": [
          "Bank-bot-methods"
        ],
        "description": "Main page for signin/signup/auth",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/reset_with_token": {
      "post": {
        "description": "After /forgot is called it redirects to this /reset_with_token to set new password",
        "tags": [
          "Bank-bot-methods"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "key",
            "required": true,
            "description": "token for this method",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "example": {
                "resp": "success"
              }
            }
          },
          "401": {
            "description": "Auth error",
            "schema": {
              "type": "string",
              "example": {
                "message": "a valid token is missing"
              }
            }
          }
        }
      }
    },
    "/do_transaction": {
      "post": {
        "description": "By given parameters it does transaction",
        "tags": [
          "Bank-bot-methods"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "customer_id_to",
            "required": true,
            "description": "Customer id to whom you transfer money",
            "type": "integer",
            "default": 9
          },
          {
            "in": "query",
            "name": "amount",
            "required": true,
            "description": "Amount of money to be transferred",
            "type": "number",
            "default": 1.4
          },
          {
            "in": "query",
            "name": "currency",
            "required": true,
            "description": "Currency in which money are transferred",
            "type": "array",
            "items": {
              "enum": [
                "aed",
                "usd",
                "eur"
              ],
              "default": "aed"
            },
            "collectionFormat": "multi"
          },
          {
            "in": "header",
            "name": "key",
            "required": true,
            "description": "token for this method",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "example": {
                "message": "Transaction made!"
              }
            }
          },
          "400": {
            "description": "Invalid argumets",
            "schema": {
              "type": "string",
              "example": {
                "message": "Not valid arguments!"
              }
            }
          },
          "401": {
            "description": "Auth error",
            "schema": {
              "type": "string",
              "example": {
                "message": "a valid token is missing"
              }
            }
          }
        }
      }
    },
    "/own_transfer": {
      "post": {
        "description": "By given parameters it does transaction",
        "tags": [
          "Bank-bot-methods"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "curr_from",
            "required": true,
            "description": "Name of currency from",
            "type": "array",
            "items": {
              "enum": [
                "aed",
                "usd",
                "eur"
              ],
              "default": "usd"
            }
          },
          {
            "in": "query",
            "name": "curr_to",
            "required": true,
            "description": "Name of currency to",
            "type": "array",
            "items": {
              "enum": [
                "aed",
                "usd",
                "eur"
              ],
              "default": "aed"
            }
          },
          {
            "in": "query",
            "name": "amount",
            "required": true,
            "description": "Amount of money to be transferred",
            "type": "number",
            "default": 1
          },
          {
            "in": "header",
            "name": "key",
            "required": true,
            "description": "token for this method",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "example": {
                "message": "Success"
              }
            }
          },
          "400": {
            "description": "Invalid argumets",
            "schema": {
              "type": "string",
              "example": {
                "message": "Not valid arguments!"
              }
            }
          },
          "401": {
            "description": "Auth error",
            "schema": {
              "type": "string",
              "example": {
                "message": "a valid token is missing"
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "string",
              "example": {
                "message": "Internal currency service is down"
              }
            }
          }
        }
      }
    }
  }
}